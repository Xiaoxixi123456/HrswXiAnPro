<Window x:Class="MainApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">

    <Grid Margin="5" Background="{DynamicResource {x:Static SystemColors.InactiveBorderBrushKey}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="221*"/>
            <ColumnDefinition Width="404*"/>
            <ColumnDefinition Width="162*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="214*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="18*"/>
        </Grid.RowDefinitions>
        <Menu Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="0">
            <Menu.ItemsPanel >
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Left" Margin="0,0,3,0" />
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="文件"/>
            <MenuItem Header="设置"/>
        </Menu>
        <TabControl Grid.Row="1" 
                    Grid.Column="0" 
                    Margin="10" 
                    Background="{x:Null}">
            <TabItem Header="料库"></TabItem>
            <TabItem Header="料盘"></TabItem>
            <TabItem Header="工件"></TabItem>
        </TabControl>
    </Grid>
</Window>
