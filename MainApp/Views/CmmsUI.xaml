        <ItemsControl x:Name="CmmLstBx" 
                 ItemsSource="{Binding LogicUnits}"
                 Margin="3" 
                 Background="{x:Null}" 
                 ItemsPanel="{DynamicResource CmmItemsPanelTemplate}" 
