                 >
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:LogicUnitUI Grid.Column="0" Margin="3"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
